{
  "name": "chatview",
  "displayName": "ChatView",
  "description": "Markdown conversation preview in LINE style",
  "version": "0.0.2",
  "publisher": "keides2",
  "repository": {
    "type": "git",
    "url": "https://github.com/keides2/chatview"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ChatView",
      "properties": {
        "chatPreview.defaultFolder": {
          "type": "string",
          "default": "workspace",
          "description": "保存ダイアログの既定フォルダ。'workspace'（ワークスペースのルート）、'home'（ユーザーホーム）、または絶対パスを指定できます。"
        },
        "chatPreview.puppeteerExecutablePath": {
          "type": "string",
          "default": "",
          "description": "Puppeteerで使用するChrome/Chromiumの実行ファイルパス。空の場合は自動検出を試みます。"
        }
      }
    },
    "commands": [
      {
        "command": "chatPreview.showPreview",
        "title": "ChatView: Preview display"
      },
      {
        "command": "chatPreview.exportImage",
        "title": "ChatView: Export view as image"
      }
    ]
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "activationEvents": [
    "onCommand:chatPreview.showPreview",
    "onCommand:chatPreview.exportImage"
  ],
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "media/icons/ChatView-icon-128.png",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-watch": "webpack --watch",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "puppeteer": "^24.20.0",
    "puppeteer-core": "^24.20.0"
  }
}

{
  "name": "chatview",
  "displayName": "ChatView",
  "description": "Markdown conversation preview in LINE style",
  "version": "0.0.1",
  "publisher": "keides2",
  "repository": {
    "type": "git",
    "url": "https://github.com/keides2/chatview"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chatPreview.showPreview"
  ],
  "main": "./out/extension.js",
  "icon": "media/icons/ChatView-icon-128.png",
  "contributes": {
    "commands": [
        {
          "command": "chatPreview.showPreview",
          "title": "ChatView: Preview display"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}

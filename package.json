{
  "name": "chatview-enterprise",
  "displayName": "ChatView Enterprise",
  "description": "ChatView Enterprise Edition",
  "version": "0.1.2",
  "publisher": "keides2",
  "repository": {
    "type": "git",
    "url": "https://github.com/keides2/chatview"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ChatView",
      "properties": {
  "chatPreviewEnterprise.playwrightBrowser": {
          "type": "string",
          "enum": ["firefox", "webkit", "chromium"],
          "default": "firefox",
          "description": "Playwrightで使用するブラウザエンジン (firefox推奨)"
        },
  "chatPreviewEnterprise.browserExecutablePath": {
          "type": "string",
          "description": "ブラウザ実行ファイルの明示的なパス（企業環境やカスタムインストール用）"
        },
  "chatPreviewEnterprise.defaultFolder": {
          "type": "string",
          "default": "workspace",
          "description": "保存ダイアログの既定フォルダ。'workspace'（ワークスペースのルート）、'home'（ユーザーホーム）、または絶対パスを指定できます。"
        },
  "chatPreviewEnterprise.puppeteerExecutablePath": {
          "type": "string",
          "default": "",
          "description": "Puppeteerで使用するChrome/Chromiumの実行ファイルパス。空の場合は自動検出を試みます。"
        }
      }
    },
    "commands": [
      {
  "command": "chatPreviewEnterprise.showPreview",
  "title": "ChatView Enterprise: Preview display"
      },
      {
  "command": "chatPreviewEnterprise.exportImage",
  "title": "ChatView Enterprise: Export view as image"
      }
    ]
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "activationEvents": [
  "onCommand:chatPreviewEnterprise.showPreview",
  "onCommand:chatPreviewEnterprise.exportImage"
  ],
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "media/icons/ChatView-Enterprise-icon-128.png",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "watch": "webpack --watch --mode development",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "playwright": "^1.55.1",
    "puppeteer": "^24.22.2",
    "puppeteer-core": "^24.20.0"
  }
}
